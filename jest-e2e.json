{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "./",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "modulePaths": ["<rootDir>"],
  "moduleDirectories": ["node_modules", "src"],
  "moduleNameMapper": {
    "^src$": "<rootDir>/src",
    "^src/(.+)$": "<rootDir>/src/$1"
  },
  "silent": false
}
